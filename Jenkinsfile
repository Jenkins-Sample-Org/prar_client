            steps {
                echo 'Welcome Shashi'
            }
        }
        stage('Amjad') {
              steps {
                  echo 'Welcome Amjad'
              }
          }
        stage('Gopi') {
              steps {
                  echo 'Welcome Gopi'
              }
          }
        stage('Mallikarjun') {
              steps {
                  echo 'Welcome Mallikarjun'
              }
          }
    }
}
